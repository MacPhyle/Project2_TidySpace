<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head.ejs"); %>

  <body>
    <h1>Stuff Library</h1>
    <table>
      <tr>
        <th>Item Name</th>
        <th>Purchase Price</th>
        <th>Broken?</th>
        <th>Wrong Size?</th>
        <th>Year Last Used</th>
        <th><a href="/tags">Tags</a></th>
        <th>Notes</th>
        <th>Actions</th>
      </tr>

      <% items.forEach(function(item) { %>
      <tr>
        <td><%= item.itemName %></td>
        <td><%= item.purchasePrice %></td>
        <td><%= item.broken ? "Yes" : "No" %></td>
        <td><%= item.wrongSize ? "Yes" : "No" %></td>
        <td><%= item.yearLastUsed %></td>
        <td><%= item.tags.join(", ") %></td>
        <td><%= item.itemNotes %></td>
        <td>
          <a href="/stuff/<%= item._id %>">View</a>
          <a href="/stuff/<%= item._id %>/edit">Edit</a>
          <form action="/stuff/<%= item._id %>?_method=DELETE" method="POST">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
      <% }); %>
    </table>
    <button class="btn btn-info" onclick="window.location.href='/new'">Add more stuff!</button>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>

  <%- include("partials/footer.ejs"); %>
</html>
